{
    "name": "gckabir/arty",
    "description": "A light weight version of Laravel's artisan just for database migrations in PHP projects outside laravel.",
    "keywords": [
        "php", "migrations", "database", "lightweight", "artisan", "laravel", 
        "arty"
    ],
    "authors": [
        {
            "name": "Kabir",
            "email": "kabeer182010@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "symfony/console": "~2.6",
        "illuminate/database": "~5.0",
        "illuminate/filesystem": "~5.0",
        "illuminate/console": "~5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.5.*",
        "symfony/var-dumper": "~2.6"
    },
    "autoload": {
        "files": [
            "src/Misc/helpers.php"
        ],
        "psr-4": {
            "Gckabir\\Arty\\": "src/"
        }
    },
    "bin": [
        "bin/artygen", "bin/arty"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-package-install": [
            "Gckabir\\Arty\\ComposerHook::postPackageInstall"
        ]

    }
}
