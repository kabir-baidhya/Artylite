#!/usr/bin/env php
<?php

/*
|--------------------------------------------------------------------------
| Require Composer's autoloader
|--------------------------------------------------------------------------
|
*/
foreach ([__DIR__ . '/../../../', __DIR__ . '/../vendor/', __DIR__ . '/vendor/'] as $dir) {
    if (file_exists($file = $dir.'autoload.php')) {
        require $file;
        break;
    }
}

/*
|--------------------------------------------------------------------------
| Create the Application
|--------------------------------------------------------------------------
| First we need to create an application instance. 
|
*/

$arty = new Gckabir\Arty\Application();

/*
|--------------------------------------------------------------------------
| Boot Eloquent
|--------------------------------------------------------------------------
| If you need to use Laravel's Eloquent ORM just uncomment the line below
|
*/
$arty->bootEloquent();

/*
|--------------------------------------------------------------------------
| Configure the Application and Run
|--------------------------------------------------------------------------
| Configuration could be loaded either from a Yaml file or a PHP file
|
*/

$arty->configureFromYaml('.arty.yml')->run();
