#!/usr/bin/env php
<?php

use Gckabir\Arty\Arty;

// Require Composer's autoloader
foreach ([__DIR__ . '/../../../', __DIR__ . '/../vendor/', __DIR__ . '/vendor/'] as $dir) {
    if (file_exists($file = $dir.'autoload.php')) {
        require $file;
        break;
    }
}

// Run arty from YamlConfiguration file
(new Arty())->configureFromYaml()->run();
